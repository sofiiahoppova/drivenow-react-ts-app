{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node"],

    "allowJs": true,
    "strict": true,

    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/types": ["types/index.ts"]
    },

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "isolatedModules": true,
    "noEmit": true,

    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": ["src"]
}
